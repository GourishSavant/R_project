pipeline {
    agent any

    tools {
        nodejs "Node"  // This name must match Jenkins NodeJS tool name
    }

    environment {
        // You can add ENV variables here or use a .env file
        NODE_ENV = 'production'
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/GourishSavant/R_project.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    try {
                        sh 'npm test'
                    } catch (err) {
                        echo "Tests failed or skipped: ${err}"
                    }
                }
            }
        }

        stage('Build Project') {
            steps {
                sh 'npm run build || echo "No build script defined"'
            }
        }

        stage('Deploy with PM2') {
            steps {
                script {
                    // Stop existing app if running
                    sh 'pm2 delete Backend || echo "No existing PM2 app to delete"'

                    // Start using pm2 config
                    sh 'pm2 start pm2.config.json'

                    // Save PM2 process list and configure startup
                    sh 'pm2 save'
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed!'
        }
    }
}
