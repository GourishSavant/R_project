pipeline {
    agent any

    tools {
        nodejs "Node" 
    }

    environment {
        GITHUB_PAT = credentials('my-github-token') // Add this credential in Jenkins
        NODE_ENV = 'production'
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main',
                    url: "https://${GITHUB_PAT}@github.com/GourishSavant/R_project.git"
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'ls -la'
                sh 'npm install'
            }
        }

        stage('Install PM2') {
            steps {
                sh 'npm install pm2 -g'
            }
        }

        stage('Deploy with PM2') {
            steps {
                script {
                    // Optional cleanup
                    sh 'pm2 delete Backend || echo "No existing PM2 app"'

                    // Start or restart using pm2 config
                    sh 'pm2 startOrRestart pm2.config.json'

                    // Save PM2 process list and configure startup
                    sh 'pm2 save'
                }
            }
        }
    }

    post {
        success {
            echo '✅ Deployment successful!'
        }
        failure {
            echo '❌ Deployment failed!'
        }
    }
}
